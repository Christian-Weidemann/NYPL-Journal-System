package org.nypl.journalsystem;

import java.util.ArrayList;
import java.util.List;

import org.nypl.journalsystem.core.IArticle;
import org.nypl.journalsystem.core.IAuthor;

public class Article implements IArticle{
	
	@Override
	public String toString() {
		return "[\"" + title + "\"" + ", authors=" + authors + "]";
	}

	String title;
	ArrayList<Author> authors;
	String[] citedArticleIDs;
	ArrayList<Article> citedArticles;
	
	public Article(String title, ArrayList<Author> authors, String[] citedArticleIDs, ArrayList<Article> citedArticles) {
		super();
		assert authors.size() > 0;
		this.title = title;
		this.authors = authors;
		this.citedArticleIDs = citedArticleIDs;
		this.citedArticles = citedArticles;
	}

	@Override
	public ArrayList<Author> getAuthors() {
		return authors;
	}

	@Override
	public String getTitle() {
		return title;
	}
	
	public ArrayList<Article> getCitedArticles() {
		return citedArticles;
	}
}
